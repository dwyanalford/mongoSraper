



<div class="container">
	<div class="row">
			<div class="row">
			{{#each Article}}
			{{#if saved}}
				<div class="col-md-8">
					<h3>{{this.title}}</h3>
					<p>{{this.text}}</p>  
				</div>
				<div class="col-md-2">
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#notesModal">Make a Note</button>
				</div>
				<div class="col-md-2">
					<form action="/delete/{{this.id}}" method="POST">
	                    <button type="submit" class="btn btn-danger">Delete from Saved</button>
					</form>
				</div>
			{{/if}}

				{{!-- Scraper Modal --}}
<div id="notesModal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
      	
	      	<h4>Notes for:&nbsp;{{this.title}}</h4>
	      	
        <form action="/submit" method="POST">
        	<textarea type="text" class="form-control" name="body" placeholder="Add notes here" rows="3"></textarea>
	        
      </div><!-- /.modal-body -->
      <div class="modal-footer">
      	<button type="submit" class="btn btn-success">Save Note</button>
		</form>
      </div><!-- /.modal-footer -->
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


			{{/each}}
		    </div>
	</div>
</div>